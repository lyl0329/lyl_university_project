<view class='container' > 
<image class="bg" src='/images/free.jpg' mode='scaleToFill'></image>
  <image src='/images/dati.png' class='title'></image>
  <view  class='title1'><text>自由答题</text></view>
  <image class='about-banner' src='{{userInfo.avatarUrl}}'></image>
  <!-- <view class='item'><text>计时：{{time}}（注：每人5分钟的答题时间）</text></view> -->
  <!-- <view>倒计时：<text style='color:red'>{{countDownNum}}</text>s</view> -->
  
  <view class='item' animation="{{animationLsi}}">
    <text>题目：{{questionbody}}</text>
  </view>
  <view class='middle'>
    <view class='item1' animation="{{animationLsi}}"><button bindtap='disp' id='A' data-num="{{Ans}}" data-count="{{count}}" data-bindcount="{{bindcount}}" data-rightcount="{{rightcount}}" data-errorcount="{{errorcount}}"><view class='textcss'><text>{{A}}</text></view></button></view>
    <view class='item2' animation="{{animationLsi}}"><button bindtap='disp' id='B' data-num="{{Ans}}" data-count="{{count}}" data-bindcount="{{bindcount}}" data-rightcount="{{rightcount}}" data-errorcount="{{errorcount}}"><view class='textcss'><text>{{B}}</text></view></button></view>
    <view class='item3' animation="{{animationLsi}}"><button bindtap='disp' id='C' data-num="{{Ans}}" data-count="{{count}}" data-bindcount="{{bindcount}}" data-rightcount="{{rightcount}}" data-errorcount="{{errorcount}}"><view class='textcss'><text>{{C}}</text></view></button></view>
    <view class='item4' animation="{{animationLsi}}"><button bindtap='disp' id='D' data-num="{{Ans}}" data-count="{{count}}" data-bindcount="{{bindcount}}" data-rightcount="{{rightcount}}" data-errorcount="{{errorcount}}" ><view class='textcss'><text>{{D}}</text></view></button></view>
  </view>
    <view class='wenzi'><text style='font-weight: bold; font-size: 30rpx;'>当前得分：{{count}}分（注：答对得5分。答错扣2分！）</text></view>
  
  <view class='bottom'> 
    <button bindtap="refresh" class='button'><text>下一题</text></button>
    <view class='panduan'>{{show}}</view> 
  </view>
</view>


