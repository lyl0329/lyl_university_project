.container2{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: left;
  height:200rpx;
  position:relative;
}
.radarContainer{
   width:100%;
   height:400rpx;
   display: flex;
   justify-content:center;
   align-items: center; 
   position: relative;
}
.radarCanvas{
   width:740rpx;
   height:68vh;
   align-items: center;
   position: absolute;
   margin-left: 8rpx;
   margin-top: 4vh;
}
.container2:before,.container2:after{
	content: "";
	position: absolute;
	width: 2000rpx;
	height: 2000rpx;
	top: 820%;
	left: 50%;
	background-color: rgba(255, 255, 255, .4);
	border-radius: 40%;
	transform: translate(-50%, -70%) rotate(0);
	animation: rotate 15s linear infinite;
}
.container2:after {
	border-radius: 47%;
	background-color: rgba(255, 255, 255, .7);
	transform: translate(-50%, -70%) rotate(0);
	animation: rotate 10s linear -5s infinite;
}
@keyframes rotate {
	50% {
		transform: translate(-50%, -73%) rotate(180deg);
	} 100% {
		transform: translate(-50%, -70%) rotate(360deg);
	}
}
